<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Consumables - IT Inventory</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/ec23f4a8b0.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- DataTables -->
  <link href="https://cdn.datatables.net/2.1.2/css/dataTables.dataTables.min.css" rel="stylesheet">
  <script src="https://cdn.datatables.net/2.1.2/js/dataTables.min.js"></script>
  <link rel="shortcut icon" type="image/png" href="/Images/ndh-it.png?v=1">
</head>
<body class="bg-gray-100 overflow-x-hidden">
  <div class="flex min-h-screen">
    <%- include('partials/sidebar', { page: 'consumable' }) %>
    
    <main class="ml-72 flex-1 p-8 transition-all duration-300 overflow-x-hidden" style="min-width: 0; max-width: 100%;">
      <!-- Page Header -->
      <div class="mb-6">
        <h1 style="color: #0F828C;" class="text-4xl font-bold mb-2">Consumable Page</h1>
        <p class="text-gray-600">Manage consumable items and requests</p>
      </div>

      <!-- Consumables Inventory Table -->
      <div class="mb-8">
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Consumables Inventory</h2>
          <div class="w-full overflow-x-auto">
            <table id="consumablesTable" class="display nowrap" style="width:100%">
              <thead style="background-color: #0F828C;">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Item</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Classification</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Current Stock</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Stock No</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Date of Entry</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Date of Purchase</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Brand</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Model</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
              </tbody>
            </table>
          </div>
        </div>
      </div>

      <!-- Request Inventory Table -->
      <div class="mb-8">
        <div class="bg-white rounded-lg shadow-lg p-6">
          <h2 class="text-xl font-semibold text-gray-800 mb-4">Request Inventory</h2>
          <div class="w-full overflow-x-auto">
            <table id="requestsTable" class="display nowrap" style="width:100%">
              <thead style="background-color: #0F828C;">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Item</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Item Status</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Transaction Date</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Issued Quantity</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap"></th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Item Classification</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Stock No</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Remove</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
              </tbody>
            </table>
          </div>
          
          <!-- Record Request Button -->
          <div class="mt-6 flex justify-end">
            <button id="recordRequestBtn"
              class="bg-gradient-to-r from-[#0F828C] to-[#2e5558] hover:from-[#2e5558] hover:to-[#0F828C] text-white px-6 py-3 rounded-xl transition-all duration-300 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 focus:outline-none focus:ring-4 focus:ring-[#0F828C] focus:ring-opacity-50 font-semibold">
              Record Request
            </button>
          </div>
        </div>
      </div>
    </main>
  </div>

  <script>
    $(function () {
      // Consumables Inventory DataTable 
      const consumablesTable = new DataTable('#consumablesTable', {
        pageLength: 10,
        ordering: true,
        searching: true,
        info: true,
        scrollX: true,
        scrollCollapse: true,
        responsive: false,
        autoWidth: false,
        columnDefs: [
          { width: '180px', targets: 0 },  // Item
          { width: '140px', targets: 1 },  // Classification
          { width: '100px', targets: 2 },  // Current Stock
          { width: '100px', targets: 3 },  // Stock No
          { width: '130px', targets: 4 },  // Date of Entry
          { width: '130px', targets: 5 },  // Date of Purchase
          { width: '100px', targets: 6 },  // Brand
          { width: '120px', targets: 7 },  // Model
          { width: '100px', targets: 8, className: 'text-center' }  // Actions
        ],
        language: { 
          search: 'Search:',
          lengthMenu: 'Show _MENU_ entries',
          info: 'Showing _START_ to _END_ of _TOTAL_ entries',
          infoEmpty: 'Showing 0 to 0 of 0 entries',
          infoFiltered: '(filtered from _MAX_ total entries)',
          zeroRecords: 'No matching records found',
          emptyTable: 'No data available in table',
          paginate: { first: 'First', last: 'Last', next: 'Next', previous: 'Previous' }
        }
      });

      // Request Inventory DataTable 
      const requestsTable = new DataTable('#requestsTable', {
        pageLength: 10,
        ordering: true,
        searching: true,
        info: true,
        scrollX: true,
        scrollCollapse: true,
        responsive: false,
        autoWidth: false,
        columnDefs: [
          { width: '180px', targets: 0 },  // Item
          { width: '120px', targets: 1 },  // Item Status
          { width: '150px', targets: 2 },  // Transaction Date
          { width: '150px', targets: 3 },  // Transaction Quantity
          { width: '140px', targets: 4 },  // blank
          { width: '140px', targets: 5 },  // Item Classification
          { width: '100px', targets: 6 },  // Stock No
          { width: '80px', targets: 7, className: 'text-center' }  // Remove
        ],
        language: {
          search: 'Search:',
          lengthMenu: 'Show _MENU_ entries',
          info: 'Showing _START_ to _END_ of _TOTAL_ entries',
          infoEmpty: 'Showing 0 to 0 of 0 entries',
          infoFiltered: '(filtered from _MAX_ total entries)',
          zeroRecords: 'No matching records found',
          emptyTable: 'No data available in table',
          paginate: { first: 'First', last: 'Last', next: 'Next', previous: 'Previous' }
        }
      });
    });
  </script>
</body>
</html>
