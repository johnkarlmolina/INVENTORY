



<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - IT Inventory</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://kit.fontawesome.com/ec23f4a8b0.js" crossorigin="anonymous"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <!-- DataTables (Default) -->
  <link href="https://cdn.datatables.net/2.1.2/css/dataTables.dataTables.min.css" rel="stylesheet">
  <script src="https://cdn.datatables.net/2.1.2/js/dataTables.min.js"></script>
  <link rel="icon" type="image/png" href="/Images/ndh-it.png">
</head>

<body class="bg-gray-100 overflow-x-hidden">
  <div class="flex min-h-screen">
    <%- include('partials/sidebar', { page: 'dashboard' }) %>

      <main class="ml-72 flex-1 p-8 transition-all duration-300 overflow-x-hidden"
        style="min-width: 0; max-width: 100%;">
        <div class="mb-6">
          <h1 style="color: #0F828C;" class="text-4xl font-bold">Dashboard</h1>
          <p style="color: #777777;" class="text-2x1">Computer inventory overview</p>
        </div>

        <!-- Button Container -->
        <div class="flex justify-end mb-4">
          <button id="openComputerModal"
            class="bg-gradient-to-r from-[#0F828C] to-[#2e5558] hover:from-[#2e5558] hover:to-[#0F828C] text-white px-6 py-3 rounded-xl transition-all duration-300 flex items-center gap-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 focus:outline-none focus:ring-4 focus:ring-[#0F828C] focus:ring-opacity-50">
            <i class="fas fa-plus text-lg"></i>
            <span class="font-semibold">Add Computer</span>
          </button>
        </div>
          
        <div class="bg-white rounded-lg shadow-lg p-6 w-full overflow-x-auto">
          <div class="w-full overflow-x-auto">
            <table id="dashboardTable" class="display nowrap" style="width:100%">
              <thead style="background-color: #0F828C;">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">PC Number</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Brand</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Model</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Serial</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Property Tag</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">OS Version</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Processor</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">RAM</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">OS License</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">User</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Department</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Date of Purchase</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Date of Entry</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Office License</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">PC Status</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">PC Location</th>
                  <th class="px-4 py-3 text-left text-xs font-semibold text-white uppercase tracking-wider whitespace-nowrap">Actions</th>
                </tr>
              </thead>
            </table>
          </div>
        </div>
      </main>
  </div>

  <div id="computerModal" class="fixed inset-0 z-50 hidden">
    <div id="computerModalBackdrop" class="absolute inset-0 bg-black/40"></div>

    <div class="relative z-10 flex min-h-screen items-center justify-center p-4 md:p-6">
      <div class="w-full max-w-7xl max-h-[92vh] overflow-y-auto rounded-xl bg-white shadow-2xl border border-gray-200">
        <div class="sticky top-0 z-10 flex items-center justify-between px-6 py-4 border-b border-gray-200 bg-white rounded-t-xl">
          <h2 class="text-2xl font-bold" style="color: #0F828C;">Computer Inventory Form</h2>
          <button id="closeComputerModal" type="button"
            class="h-10 w-10 rounded-lg text-gray-500 hover:bg-gray-100 hover:text-gray-700 focus:outline-none focus:ring-2 focus:ring-[#0F828C]"
            aria-label="Close modal">
            <i class="fas fa-times"></i>
          </button>
        </div>

        <form id="computerForm" class="px-6 py-6">
          <section class="mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label for="brand" class="block text-sm font-medium text-gray-700 mb-2">Brand</label>
                <input id="brand" name="brand" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="model" class="block text-sm font-medium text-gray-700 mb-2">Model</label>
                <input id="model" name="model" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="computer_file" class="block text-sm font-medium text-gray-700 mb-2">Upload Picture/File</label>
                <input id="computer_file" name="computer_file" type="file"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 bg-white focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
            </div>
          </section>

          <section class="mb-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="procie" class="block text-sm font-medium text-gray-700 mb-2">Processor</label>
                <input id="procie" name="procie" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="ram" class="block text-sm font-medium text-gray-700 mb-2">RAM</label>
                <input id="ram" name="ram" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="videocard" class="block text-sm font-medium text-gray-700 mb-2">Video Card</label>
                <input id="videocard" name="videocard" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="storage" class="block text-sm font-medium text-gray-700 mb-2">Storage</label>
                <input id="storage" name="storage" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
            </div>
          </section>

          <section class="mb-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
              <div>
                <label for="pc_no" class="block text-sm font-medium text-gray-700 mb-2">PC Number</label>
                <input id="pc_no" name="pc_no" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="property_no" class="block text-sm font-medium text-gray-700 mb-2">Property Number</label>
                <input id="property_no" name="property_no" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="property_tag" class="block text-sm font-medium text-gray-700 mb-2">Property Tag</label>
                <input id="property_tag" name="property_tag" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <label for="serial_number" class="block text-sm font-medium text-gray-700 mb-2">Serial Number</label>
                <input id="serial_number" name="serial_number" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
            </div>
          </section>

          <section class="mb-6">
            <div class="rounded-2xl border border-gray-200 p-4 grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="pc_status" class="block text-sm font-medium text-gray-700 mb-2">Status</label>
                <select id="pc_status" name="pc_status"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 bg-white focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
                  <option value="Active" selected>Active</option>
                  <option value="Inactive">Inactive</option>
                  <option value="In Repair">In Repair</option>
                  <option value="Disposed">Disposed</option>
                </select>
              </div>
              <div>
                <label for="pc_location" class="block text-sm font-medium text-gray-700 mb-2">PC Location</label>
                <select id="pc_location" name="pc_location"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 bg-white focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
                  <option value="">Select location...</option>
                  <option value="Office A">Office A</option>
                  <option value="Office B">Office B</option>
                  <option value="Floor 1">Floor 1</option>
                  <option value="Floor 2">Floor 2</option>
                  <option value="Storage Room">Storage Room</option>
                </select>
              </div>
            </div>
          </section>

          <section class="mb-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="pc_user" class="block text-sm font-medium text-gray-700 mb-2">PC User</label>
                <input id="pc_user" name="pc_user" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="user_dept" class="block text-sm font-medium text-gray-700 mb-2">Department</label>
                <select id="user_dept" name="user_dept"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 bg-white focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
                  <option value="">Select department...</option>
                  <option value="IT Department">IT Department</option>
                  <option value="Accounting">Accounting</option>
                  <option value="HR">HR</option>
                  <option value="Admin">Admin</option>
                  <option value="Operations">Operations</option>
                  <option value="Engineering">Engineering</option>
                  <option value="Other">Other</option>
                </select>
              </div>
            </div>
          </section>

          <section class="mb-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <div>
                <label for="os_version" class="block text-sm font-medium text-gray-700 mb-2">OS Version</label>
                <input id="os_version" name="os_version" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="os_license" class="block text-sm font-medium text-gray-700 mb-2">OS License</label>
                <input id="os_license" name="os_license" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
            </div>
          </section>

          <section class="mb-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
              <div>
                <label for="date_of_purchase" class="block text-sm font-medium text-gray-700 mb-2">Date of Purchase</label>
                <input id="date_of_purchase" name="date_of_purchase" type="date"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="year_acquired" class="block text-sm font-medium text-gray-700 mb-2">Year Acquired</label>
                <input id="year_acquired" name="year_acquired" type="number" min="1900" max="2100"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="date_of_entry" class="block text-sm font-medium text-gray-700 mb-2">Date of Entry</label>
                <input id="date_of_entry" name="date_of_entry" type="date"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
              <div>
                <label for="office_license" class="block text-sm font-medium text-gray-700 mb-2">Office License</label>
                <input id="office_license" name="office_license" type="text"
                  class="w-full rounded-xl border border-gray-300 px-4 py-3 focus:border-[#0F828C] focus:outline-none focus:ring-2 focus:ring-[#0F828C]/20">
              </div>
            </div>
          </section>

          <div class="flex items-center gap-4">
            <button type="submit"
              class="bg-gradient-to-r from-[#0F828C] to-[#2e5558] hover:from-[#2e5558] hover:to-[#0F828C] text-white px-6 py-3 rounded-xl transition-all duration-300 flex items-center gap-3 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 focus:outline-none focus:ring-4 focus:ring-[#0F828C] focus:ring-opacity-50">
              <i class="fas fa-plus text-lg"></i>
              <span class="font-semibold">Add Computer</span>
            </button>

            <button id="clearComputerForm" type="button"
              class="px-6 py-3 rounded-xl border border-gray-300 text-gray-700 hover:bg-gray-100 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-gray-300">
              Clear Form
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>


  
</body>

</html>


<script>

 $(document).ready(function() {
    const apiUrl = "<%= baseUrl %>";
     $(function () {
    const $computerModal = $('#computerModal');
    const $computerForm = $('#computerForm');

    function openComputerModal() {
      $computerModal.removeClass('hidden');
      $('body').addClass('overflow-hidden');
    }

    function closeComputerModal() {
      $computerModal.addClass('hidden');
      $('body').removeClass('overflow-hidden');
    }

    const table = new DataTable('#dashboardTable', {
      processing: true,
       serverSide: true,
      ajax: {
        url: apiUrl+'/computers/computerDataTable',
        type: 'POST',
        dataType: 'json'
      },
      columns: [
        { data: 'pc_no' },
        { data: 'brand' },
        { data: 'model' },
        { data: 'serial_number' },
        { data: 'property_tag' },
        { data: 'os_version' },
        { data: 'procie' },
        { data: 'ram' },
        { data: 'os_license' },
        { data: 'pc_user' },
        { data: 'user_dept' },
        { data: 'date_of_purchase' },
        { data: 'date_of_entry' },
        { data: 'office_license' },
        { data: 'pc_status' },
        { data: 'pc_location' },

        // Actions column (buttons)
        {
          data: 'computer_id',
          orderable: false,
          searchable: false,
          render: function (id) {
            return `
              <div class="flex gap-1">
                <button class="editBtn p-1.5 text-blue-600 hover:text-blue-800" data-id="${id}" title="Update">
                  <i class="fas fa-edit text-lg"></i>
                </button>
                <button class="fileBtn p-1.5 text-green-600 hover:text-green-800" data-id="${id}" title="Update File">
                  <i class="fas fa-file-upload text-lg"></i>
                </button>
                <button class="deleteBtn p-1.5 text-red-600 hover:text-red-800" data-id="${id}" title="Delete">
                  <i class="fas fa-trash text-lg"></i>
                </button>
              </div>
            `;
          }
        }
      ],
      pageLength: 10,
      ordering: true,
      searching: true,
      info: true,
      scrollX: true,
      scrollCollapse: true,
      responsive: false,
      autoWidth: false,
      columnDefs: [
        { width: '60px', targets: 0 },  // PC Number
        { width: '80px', targets: 1 },  // Brand
        { width: '80px', targets: 2 },  // Model
        { width: '120px', targets: 3 }, // Serial
        { width: '100px', targets: 4 }, // Property Tag
        { width: '100px', targets: 5 }, // OS Version
        { width: '120px', targets: 6 }, // Processor
        { width: '60px', targets: 7 },  // RAM
        { width: '100px', targets: 8 }, // OS License
        { width: '120px', targets: 9 }, // User
        { width: '150px', targets: 10 }, // Department
        { width: '110px', targets: 11 }, // Date of Purchase
        { width: '110px', targets: 12 }, // Date of Entry
        { width: '180px', targets: 13 }, // Office License
        { width: '100px', targets: 14 }, // PC Status
        { width: '100px', targets: 15 }, // PC Location
        { width: '100px', targets: 16, className: 'text-center' }  // Actions
      ],
      language: {
        search: 'Search:',
        lengthMenu: 'Show _MENU_ entries',
        info: 'Showing _START_ to _END_ of _TOTAL_ entries',
        infoEmpty: 'Showing 0 to 0 of 0 entries',
        infoFiltered: '(filtered from _MAX_ total entries)',
        zeroRecords: 'No matching records found',
        emptyTable: 'No data available in table',
        paginate: { first: 'First', last: 'Last', next: 'Next', previous: 'Previous' }
      }
    });

    $('#openComputerModal').on('click', openComputerModal);
    $('#closeComputerModal, #computerModalBackdrop').on('click', closeComputerModal);

    $(document).on('keydown', function (event) {
      if (event.key === 'Escape' && !$computerModal.hasClass('hidden')) {
        closeComputerModal();
      }
    });

    $('#clearComputerForm').on('click', function () {
      $computerForm.trigger('reset');
      $('#pc_status').val('Active');
    });

    $computerForm.on('submit', function (event) {
      event.preventDefault();
      Swal.fire({
        icon: 'success',
        title: 'Ready',
        text: 'Computer form is now shown in a modal.',
        confirmButtonColor: '#0F828C'
      });
    });

    //  delete button with SweetAlert
    $('#dashboardTable').on('click', '.deleteBtn', function () {
      const id = $(this).data('id');

      Swal.fire({
        title: 'Delete?',
        text: 'Are you sure you want to delete this item?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes, delete',
        cancelButtonText: 'Cancel'
      }).then((result) => {
        if (result.isConfirmed) {
          // later: call delete API
          console.log('delete id:', id);
        }
      });
    });

      // Ensure widths are correct after first layout/paint.
      setTimeout(function () {
        try {
          table.columns.adjust();
        } catch (e) {
          // ignore
        }
      }, 0);
      setTimeout(function () {
        try {
          table.columns.adjust();
        } catch (e) {
          // ignore
        }
      }, 350);
    });

    });
  </script>
