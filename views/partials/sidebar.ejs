<script>

    $(document).ready(function() {

      const apiUrl = "<%= baseUrl %>";
  const $sidebar = $('#sidebar');
  const $header = $('#sidebarHeader');
  const $toggleBtn = $('#toggleSidebar');
  const $sidebarTitle = $('#sidebarTitle');
  const $links = $('.sidebar-link');
  const $icons = $('.sidebar-icon');
  const $texts = $('.sidebar-text');

  if ($sidebar.length && $toggleBtn.length) {
    let savedCollapsed = false;
    try {
      savedCollapsed = localStorage.getItem('sidebarCollapsed') === 'true';
    } catch (e) {
      savedCollapsed = false;
    }

    const sidebarHadTransitionAll = $sidebar.hasClass('transition-all');
    const sidebarHadDuration300 = $sidebar.hasClass('duration-300');

    function applySidebarOnly(isCollapsed) {
      $('body').toggleClass('sidebar-collapsed', !!isCollapsed);
      if (isCollapsed) {
        $sidebar.removeClass('w-72').addClass('w-20');
        $header.removeClass('justify-between').addClass('justify-center');
        $sidebarTitle.addClass('hidden');
        $texts.addClass('hidden');
        $links.removeClass('px-8').addClass('px-0 justify-center');
        $icons.removeClass('mr-4');
      } else {
        $sidebar.removeClass('w-20').addClass('w-72');
        $header.removeClass('justify-center').addClass('justify-between');
        $sidebarTitle.removeClass('hidden');
        $texts.removeClass('hidden');
        $links.removeClass('px-0 justify-center').addClass('px-8');
        $icons.addClass('mr-4');
      }
    }

    function applyMainOnly(isCollapsed, noAnimation) {
      const $main = $('main');
      if ($main.length === 0) return;

      const mainHadTransitionAll = $main.hasClass('transition-all');
      const mainHadDuration300 = $main.hasClass('duration-300');

      if (noAnimation) $main.removeClass('transition-all duration-300');

      if (isCollapsed) {
        $main.removeClass('ml-72').addClass('ml-20');
      } else {
        $main.removeClass('ml-20').addClass('ml-72');
      }

      if (noAnimation) {
        if (mainHadTransitionAll) $main.addClass('transition-all');
        if (mainHadDuration300) $main.addClass('duration-300');
      }
    }

    function adjustDataTablesAfterLayout(delayMs) {
      const delay = typeof delayMs === 'number' ? delayMs : 320;
      window.clearTimeout(window.__sidebarDtAdjustTimer);
      window.__sidebarDtAdjustTimer = window.setTimeout(function () {
        $(window).trigger('resize');
        if ($.fn && $.fn.dataTable) {
          try {
            $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
          } catch (e) {
            // ignore
          }
        }
      }, delay);
    }

    function applyCollapsedUI(isCollapsed, opts) {
      const options = opts || {};
      applySidebarOnly(isCollapsed);
      applyMainOnly(isCollapsed, !!options.noAnimation);
      if (!options.skipDtAdjust) adjustDataTablesAfterLayout(options.dtDelayMs);
    }

    // SNAP sidebar to saved state immediately (prevents open/close animation on navigation)
    $sidebar.removeClass('transition-all duration-300');
    applySidebarOnly(savedCollapsed);

    $(function () {
      // Sync main margin without animating
      applyMainOnly(savedCollapsed, true);

      // Restore sidebar transitions for user-initiated toggles
      if (sidebarHadTransitionAll) $sidebar.addClass('transition-all');
      if (sidebarHadDuration300) $sidebar.addClass('duration-300');

      // Bind toggle (should animate)
      $toggleBtn.on('click', function (e) {
        e.preventDefault();
        const next = !$sidebar.hasClass('w-20');
        try {
          localStorage.setItem('sidebarCollapsed', String(next));
        } catch (err) {
          // ignore
        }
        applyCollapsedUI(next);
      });

      // Final safety: ensure state is applied (no animation)
      applyCollapsedUI(savedCollapsed, { noAnimation: true, skipDtAdjust: false, dtDelayMs: 0 });
    });
  }

  $(document).on('click', "#inventory", function(e) {
    e.preventDefault();
    //window.location.href = '/dashboard';  
    e.stopPropagation();

    $.ajax({
      url: apiUrl+'/',
      method: 'GET',
      success: function() {
        window.location.href = '/';
      },
      error: function() {
        alert('Failed to load dashboard. Please try again.');
      }
    });



  });

  $(document).on('click', "#peripherals", function(e) {
    e.preventDefault();
    //window.location.href = '/dashboard';  
    e.stopPropagation();

    $.ajax({
      url: apiUrl+'/peripherals/peripheralPageRender',
      method: 'GET',
      success: function() {
        window.location.href = '/peripherals/peripheralPageRender';
      },
      error: function() {
        alert('Failed to load dashboard. Please try again.');
      }
    });

    });


   });
</script>
