<script>
  $(document).ready(function() {
    const apiUrl = "<%= baseUrl %>";

    $(document).on('click', "#dashboard", function(e) {
      e.preventDefault();
      e.stopPropagation();
      $.ajax({
        url: apiUrl+'/',
        method: 'GET',
        success: function() {
          window.location.href = '/';
        },
        error: function() {
          alert('Failed to load dashboard. Please try again.');
        }
      });
    });

  $(document).on('click', "#inventory", function(e) {
    e.preventDefault();
    e.stopPropagation();
    $.ajax({
      url: apiUrl+'/',
      method: 'GET',
      success: function() {
        window.location.href = '/';
      },
      error: function() {
        alert('Failed to load dashboard. Please try again.');
      }
    });
  });

  $(document).on('click', "#peripherals", function(e) {
    e.preventDefault();
