    $.ajax({
      url: apiUrl+'/peripherals/peripheralPageRender',
      method: 'GET',
      success: function() {
        window.location.href = '/peripherals/peripheralPageRender';
      },
      error: function() {
        alert('Failed to load dashboard. Please try again.');
      }
    });
  });

  });
</script>
